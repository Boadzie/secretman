<%- include('partials/header') %>

<div class="jumbotron col-md-6 offset-md-3 text-center">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secrets!</h1>
    <% usersWithSecrets.forEach(function(user){ %>
      <div
        class="card text-white bg-dark mb-3 center text-center"
      >
        <div class="card-body">
          <p class="lead"><%=user.secret %></p>
        </div>
      </div>
    <% }) %>
    <hr />

    <a class="btn btn-light btn-lg" href="/logout" role="button">Log Out</a>
    <a class="btn btn-dark btn-lg" href="/submit" role="button"
      >Submit a Secret</a
    >
  </div>
</div>

<%- include('partials/footer') %>
